<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/btnmask"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:onClick="eventoButton"
        android:text="/ (Mask)"
        app:layout_constraintStart_toEndOf="@+id/btn0"
        app:layout_constraintTop_toBottomOf="@+id/btn3" />

    <Button
        android:id="@+id/btnborrar"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:onClick="eventoButton"
        android:text="DEL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnpunto"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnlimpiar"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:onClick="eventoButton"
        android:text="AC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnborrar"
        app:layout_constraintTop_toBottomOf="@+id/btn0"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnigual"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:onClick="eventoButton"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnlimpiar"
        app:layout_constraintTop_toBottomOf="@+id/btnmask"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/pantalla"
        android:layout_width="243dp"
        android:layout_height="129dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="92dp"
        android:onClick="eventoButton"
        android:text="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pantalla" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:onClick="eventoButton"
        android:text="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pantalla" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:onClick="eventoButton"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintTop_toBottomOf="@+id/pantalla" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:onClick="eventoButton"
        android:text="9"
        app:layout_constraintStart_toEndOf="@+id/btn8"
        app:layout_constraintTop_toBottomOf="@+id/pantalla" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:onClick="eventoButton"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn4" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:onClick="eventoButton"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btn5" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:onClick="eventoButton"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintTop_toBottomOf="@+id/btn6" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:onClick="eventoButton"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/btnpunto"
        app:layout_constraintTop_toBottomOf="@+id/btn2" />

    <Button
        android:id="@+id/btnpunto"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:onClick="eventoButton"
        android:text="."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:onClick="eventoButton"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn8" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:onClick="eventoButton"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/pantalla" />

    <Button
        android:id="@+id/btnarriba"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:onClick="eventoButton"
        android:text="↑"
        app:layout_constraintStart_toEndOf="@+id/pantalla"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnizquierda"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:onClick="eventoButton"
        android:text="←"
        app:layout_constraintStart_toEndOf="@+id/pantalla"
        app:layout_constraintTop_toBottomOf="@+id/btnarriba" />

    <Button
        android:id="@+id/btndivision"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:onClick="eventoButton"
        android:text="/"
        tools:layout_editor_absoluteX="323dp"
        tools:layout_editor_absoluteY="260dp" />

    <Button
        android:id="@+id/btnsuma"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:onClick="eventoButton"
        android:text="+"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/btnsubnet" />

    <Button
        android:id="@+id/btnabajo"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:onClick="eventoButton"
        android:text="↓"
        tools:layout_editor_absoluteX="322dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/btnmultiplicacion"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:onClick="eventoButton"
        android:text="*"
        app:layout_constraintStart_toEndOf="@+id/btn6"
        app:layout_constraintTop_toBottomOf="@+id/btnsuma" />

    <Button
        android:id="@+id/btnderecha"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:onClick="eventoButton"
        android:text="→"
        tools:layout_editor_absoluteX="322dp"
        tools:layout_editor_absoluteY="76dp" />

    <Button
        android:id="@+id/btnexponente"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:onClick="eventoButton"
        android:text="^"
        app:layout_constraintStart_toEndOf="@+id/btn3"
        app:layout_constraintTop_toBottomOf="@+id/btnmultiplicacion" />

    <Button
        android:id="@+id/btnraiz"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:onClick="eventoButton"
        android:text="¹"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnexponente"
        app:layout_constraintTop_toBottomOf="@+id/btndivision" />

    <Button
        android:id="@+id/btnfactorial"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:onClick="eventoButton"
        android:text="!"
        app:layout_constraintStart_toEndOf="@+id/btnmask"
        app:layout_constraintTop_toBottomOf="@+id/btnexponente" />

    <Button
        android:id="@+id/btnporcentaje"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:onClick="eventoButton"
        android:text="%"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnfactorial"
        app:layout_constraintTop_toBottomOf="@+id/btnraiz" />

    <Button
        android:id="@+id/btnsubnet"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:onClick="eventoButton"
        android:text="Subnet"
        tools:layout_editor_absoluteX="268dp"
        tools:layout_editor_absoluteY="144dp" />

    <Button
        android:id="@+id/btnrecuperar"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="eventoButton"
        android:text="Recuperar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnigual"
        app:layout_constraintTop_toBottomOf="@+id/btnfactorial"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnresta"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:onClick="eventoButton"
        android:text="-"
        tools:layout_editor_absoluteX="323dp"
        tools:layout_editor_absoluteY="212dp" />

</android.support.constraint.ConstraintLayout>